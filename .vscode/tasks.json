// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$ts-webpack",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "webpack",
			"command": "npm",
			"args": ["run", "compile"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$tsc-watch"
		},
		{
			"label": "webpack: watch",
			"type": "shell",
			"command": "npm run watch",
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"source": "ts",
				"applyTo": "closedDocuments",
				"fileLocation": "absolute",
				"pattern": "$tsc",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*webpack.*watching files for updates...",
					"endsPattern": "^.*webpack.*compiled successfully.*$"
				}
			}
		}
	]
}
